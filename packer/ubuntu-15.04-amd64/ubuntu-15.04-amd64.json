{
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<enter><esc><enter><wait>",
        "/install/vmlinuz ",
        "initrd=/install/initrd.gz ",
        "auto ",
        "url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg ",
        "debian-installer=en_US ",
        "locale=en_US ",
        "keyboard-configuration/modelcode=SKIP ",
        "keyboard-configuration/layout=de ",
        "keyboard-configuration/variant=de ",
        "hostname={{.Name}} ",
        "domain= ",
        "debconf/frontend=noninteractive ",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 51200,
      "guest_os_type": "Ubuntu_64",
      "vm_name": "vivid64",
      "http_directory": "./",
      "iso_url": "http://releases.ubuntu.com/15.04/ubuntu-15.04-server-amd64.iso",
      "iso_checksum_type": "sha256",
      "iso_checksum": "6501c8545374665823384bbb6235f865108f56d8a30bbf69dd18df73c14ccb84",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "86400s",
      "shutdown_command": "sudo shutdown -hP now",
      "guest_additions_mode": "disable",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "2048" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ]
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": "9",
      "output": "ubuntu-15.04-amd64_{{.Provider}}.box"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "../scripts/debian/packages.sh",
        "../scripts/common/access.sh",
        "../scripts/common/cleanup.sh"
      ]
    }
  ]
}

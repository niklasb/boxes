{
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<enter><esc><enter><wait>",
        "install ",
        "auto ",
        "url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg ",
        "locale=en_US.UTF-8 ",
        "country=DE ",
        "language=en ",
        "keymap=de ",
        "hostname={{.Name}} ",
        "domain= ",
        "debconf/frontend=noninteractive ",
        "<enter><wait>",
        "<wait10><enter>"
      ],
      "boot_wait": "10s",
      "disk_size": 51200,
      "guest_os_type": "Ubuntu_64",
      "vm_name": "ubuntu-14.04-amd64",
      "http_directory": "./",
      "iso_url": "http://releases.ubuntu.com/14.04.1/ubuntu-14.04.1-server-amd64.iso",
      "iso_checksum_type": "sha512",
      "iso_checksum": "a612c60e926ce5363742417b6d2b3c6ce87ae1145a49ea3506b8a000c641ad22909129757dae2f96963b3fe26af72e6554fec4667a5927e18c1d895067adc138",
      "ssh_username": "sam",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "86400s",
      "shutdown_command": "sudo shutdown -hP now",
      "guest_additions_mode": "disable",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "1024" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "2" ]
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": "9",
      "output": "ubuntu-14.04-amd64_{{.Provider}}.box"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|{{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "../scripts/debian/packages.sh",
        "../scripts/common/access.sh",
        "../scripts/common/cleanup.sh"
      ]
    }
  ]
}
